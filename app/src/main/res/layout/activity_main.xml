<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPVAI"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:onClick="playPVAI"
        android:text="@string/player_vs_ai"
        app:layout_constraintBottom_toTopOf="@+id/buttonEndless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPVP" />

    <Button
        android:id="@+id/buttonPVP"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="155dp"
        android:onClick="playPVP"
        android:text="@string/player_vs_player"
        app:layout_constraintBottom_toTopOf="@+id/buttonPVAI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEndless"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="156dp"
        android:onClick="playEndless"
        android:text="@string/endless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPVAI" />

</android.support.constraint.ConstraintLayout>